<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Favorites</title>
    <link type="text/css" rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="content">
      <h1>Your Favorite Quotes</h1>
      <div class="favorite-quotes">
        <% if (favoriteQuotes.length > 0 ) { %>
        
          <% favoriteQuotes.forEach(quote => { %>
            <br>
            <strong>Advice Number <%=quote.num %>:</strong> <%= quote.advice %>
            <br />
            <strong>Comments: </strong><%= quote.comments %>
            <br>

          <% }); %>
        
        <form method="POST" action="/clearFavorites">
          <button type="submit">Clear Favorites</button>
        </form>
        <% } else { %>
        <p>No favorite quotes yet.</p>
        <% } %>
      </div>
      <div class="links">
        <a href="/">Home Page</a>
        |
        <a href="/favorites">Favorites</a>
      </div>
    </div>
  </body>
</html>
